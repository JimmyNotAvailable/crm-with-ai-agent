# =============================================================================
# CRM-AI-Agent Backend Dockerfile
# Unified Dockerfile with multi-stage build for both dev and production
# =============================================================================
# BUILD MODES:
#   Production (default):
#     docker build -f docker/Dockerfile.backend -t crm-backend .
#
#   Development (fast build, copy local packages):
#     docker build -f docker/Dockerfile.backend --build-arg BUILD_MODE=dev -t crm-backend-dev .
# =============================================================================

FROM python:3.11-slim AS base

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    default-libmysqlclient-dev \
    pkg-config \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Set Python path
ENV PYTHONPATH=/app
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

# =============================================================================
# Production Stage - Install from requirements
# =============================================================================
FROM base AS production

# Copy requirements first for better caching
COPY backend/requirements-frozen.txt ./requirements.txt

# Install Python dependencies
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# Copy backend code
COPY backend/ ./backend/
COPY ai_modules/ ./ai_modules/

# =============================================================================
# Development Stage - For local fast builds (optional)
# =============================================================================
FROM base AS development

# Copy requirements (minimal for dev)
COPY requirements.txt ./requirements.txt

# Install Python dependencies
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# Copy backend code
COPY backend/ ./backend/
COPY ai_modules/ ./ai_modules/

# =============================================================================
# Final Stage - Select based on BUILD_MODE
# =============================================================================
ARG BUILD_MODE=prod
FROM ${BUILD_MODE}duction AS final

# Copy environment file if exists
COPY .env* ./

# Expose port
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Run the application
CMD ["uvicorn", "backend.main:app", "--host", "0.0.0.0", "--port", "8000"]
